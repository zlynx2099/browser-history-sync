{
  "name": "Browser History Sync",
  "version": "1.0",
  "description": "Sync Browser History between multiple devices",
  "background": {
    "persist": true,
    "scripts": ["zl-indexdb.js","utils.js","background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "minimum_chrome_version": "9",
  "permissions": ["bookmarks", "tabs","history","storage"],
  "host_permissions": [
    "https://localhost:*/*",
    "http://localhost:*/*"
  ],
  "manifest_version": 2
}
